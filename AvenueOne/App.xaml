<Application x:Class="AvenueOne.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AvenueOne"
             StartupUri="Views/Windows/LoginWindow.xaml"
             Startup="OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary x:Name="ColorDictionary" Source="Views/Resources/ColorDictionary.xaml" />
                <ResourceDictionary x:Name="IconsDictionary" Source="Views/Resources/IconDictionary.xaml" />
                <ResourceDictionary x:Name="ErrorControlTemplates" Source="Views/Resources/ErrorControlTemplates.xaml" />
                <ResourceDictionary x:Name="ButtonDictionary" Source="Views/Resources/ButtonDictionary.xaml" />
                <ResourceDictionary x:Name="StyleDictionary" Source="Views/Resources/StylesDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
