<Window x:Class="AvenueOne.Views.LoginWindow"
        x:Name="LoginViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AvenueOne.Views"
        xmlns:converters="clr-namespace:AvenueOne.Converters"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">

    <Window.Resources>
        <converters:PasswordConverter x:Key="PasswordConverter"/>
    </Window.Resources>

    <StackPanel Margin="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Username" Grid.Column="0"/>
            <TextBox x:Name="Username" Grid.Column="1" Text="{Binding Username, Mode=TwoWay}"/>
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="193*"/>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="59*"/>
                <ColumnDefinition Width="420*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Password" Grid.Column="0"/>
            <PasswordBox x:Name="Password" Grid.Column="1" Grid.ColumnSpan="3"/>
        </Grid>

        <!--<Button Content="Login" Command="{Binding LoginCommand, Mode=OneWay}" CommandParameter="{Binding ElementName=LoginViewWindow}">-->
            <Button Content="Login" Command="{Binding LoginCommand, Mode=OneWay}">
                <Button.CommandParameter>
                <MultiBinding Converter="{StaticResource PasswordConverter}">
                    <Binding ElementName="LoginViewWindow"/>
                    <Binding ElementName="Username"/>
                    <Binding ElementName="Password"/>
                </MultiBinding>
            </Button.CommandParameter>
        </Button>
        
        <Button Content="Cancel" Click="Button_Close"/>
    </StackPanel>
</Window>
